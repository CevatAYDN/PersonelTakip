@model PT.Entity.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="col-md-offset-3 col-md-6 ">
    <div class="panel">
        <div class="text-center text-danger">@Html.ValidationSummary()</div>
    </div>
</div>
<div class="col-md-offset-3 col-md-6">
    @using (Html.BeginForm("Login", "Acount", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            @Html.LabelFor(x => x.UserName)
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kulanıcı Adı" })
            @Html.ValidationMessageFor(x=> x.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "E-Şifre" , type = "password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>


        <div class="row">
            <div class="col-sm-6">
                @Html.ActionLink("Üye iseniz", "Login", "Acount", new { @class = "btn btn-info btn-block" })
            </div>
            <div class="col-sm-6">
                <input type="submit" value="Giriş Yap" class="btn btn-block btn-success" />
            </div>
        </div>
    }
</div>
